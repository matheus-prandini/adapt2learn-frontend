{
  "hosting": {
    "public": "build",
    "ignore": ["firebase.json","**/.*","**/node_modules/**"],
    "rewrites": [
      {
        "source": "/api/**",
        "run": {
          "serviceId": "adapt2learn",
          "region": "us-central1"
        }
      },
      {
        "source": "/games/**",
        "destination": "/games/maze-revolution/index.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
